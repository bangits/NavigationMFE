{
  "compilerOptions": {
    "experimentalDecorators": true,
    "isolatedModules": false,
    "moduleResolution": "Node",
    "declaration": false,
    "module": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "esModuleInterop": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["node"],
    "paths": {
      "@/*": ["*"],
      "styled-system/*": ["../styled-system/*"]
    }
  },
  "typeRoots": ["node_modules"],
  "types": ["system"],
  "typeAcquisition": { "enable": true }
}
